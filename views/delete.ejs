<section class="vh-100">
    <% if(infoSubmitObj != '') { %>
        <div class="col-12 alert alert-success" role="alert">
          <%= infoSubmitObj %>
        </div>
      <% } %>
    
      <% if(infoErrorsObj != '') { %>
        <div class="col-12 alert alert-danger" role="alert">
          <%= infoErrorsObj %>
        </div>
      <% } %>
    <div class="container-fluid">
       
      <div class="row">
        <div class="col-sm-6 text-black">
          <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5" style="justify-content: center;">
            
            <form style="width: 23rem; margin-top: -5rem;" action="/craft/<%=craft.id%>/delete" method="post">
              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Delete <%= craft.name %></h3>
              <div class="form-outline mb-4">
                <input type="text" id="form2Example18" name="name" class="form-control form-control-lg" required/>
                <label class="form-label"  for="form2Example18">DIY name</label>
              </div>
              <div class="form-outline mb-4">
                <input type="email" id="form2Example18" name="email" class="form-control form-control-lg"required/>
                <label class="form-label"   for="form2Example18">Email address</label>
              </div>
              <div class="pt-1 mb-4">
                <button class="btn btn-info btn-lg btn-block" type="submit">Delete</button>
              </div>
            </form>
          </div>
          
  
        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="/uploads/<%=craft.image%>"
            alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
        </div>
      </div>
    </div>
  </section>